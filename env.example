# Patent Search Tool Environment Variables
# Copy this file to .env and fill in your values

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
COLLECTION_NAME=patents

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
MODEL_CACHE_DIR=./models

# Application Settings
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_PORT=8000
APP_HOST=0.0.0.0

# API Configuration
API_KEY=your-secure-api-key-here
ENABLE_API_KEY_AUTH=false
CORS_ORIGINS=*

# Rate Limiting
ENABLE_RATE_LIMITING=false
REQUESTS_PER_MINUTE=100

# Database Settings (if using additional database)
DATABASE_URL=sqlite:///./patents.db
DATABASE_ECHO=false

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# File Storage
DATA_DIRECTORY=./data
LOGS_DIRECTORY=./logs
TEMP_DIRECTORY=./temp
BACKUP_DIRECTORY=./backups

# Processing Settings
BATCH_SIZE=100
MAX_WORKERS=4
PROCESSING_TIMEOUT=300

# Search Configuration
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100
MIN_SIMILARITY_SCORE=0.5

# Security
SECRET_KEY=your-secret-key-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=patent-search@company.com

# External Services
GOOGLE_APPLICATION_CREDENTIALS=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Development Settings
DEV_CREATE_SAMPLE_DATA=true
DEV_SAMPLE_SIZE=50
DEV_ENABLE_PROFILING=false

# Production Settings
PROD_WORKERS=4
PROD_PRELOAD_MODELS=true
PROD_OPTIMIZE_MEMORY=true

# Analytics
ENABLE_ANALYTICS=false
ANALYTICS_RETENTION_DAYS=90
TRACK_USER_SEARCHES=true

# Backup Configuration
ENABLE_BACKUPS=false
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# Webhook Configuration
WEBHOOK_URLS=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=30

# Custom Model Paths (if using local models)
CUSTOM_MODEL_PATH=
TOKENIZER_PATH=

# GPU Configuration (if using CUDA)
CUDA_VISIBLE_DEVICES=0
TORCH_HOME=./torch_cache

# Memory Settings
MAX_MEMORY_GB=8
MEMORY_LIMIT_WARNING_THRESHOLD=0.8

# Timezone
TZ=UTC

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_MULTILINGUAL_SEARCH=false
ENABLE_PATENT_CITATIONS=false
ENABLE_SIMILARITY_CLUSTERING=false
